<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/margin_top_signin">
        <ImageView
            android:id="@+id/todoMsg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/car_insurance"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim It"
            android:id="@+id/logoText"
            android:textStyle="bold"
            android:textColor="@color/greyishBrown"
            android:textSize="@dimen/splash_screen_logo_text_size"
            android:layout_marginTop="@dimen/splash_screen_vertical_margin"
            android:layout_below="@+id/todoMsg"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/signInMessage"
        android:layout_height="wrap_content"
        android:text="@string/signin_message"
        android:textColor="@color/greyishBrown"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_screen_vertical_margin"
        android:layout_below="@+id/logo"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin__"
        android:layout_marginRight="@dimen/activity_horizontal_margin__"
        android:textSize="@dimen/chat_message_text"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Gooogle"
        android:textColor="@color/greyishBrown"
        android:textAlignment="center"
        android:textSize="@dimen/chat_message_text"
        android:background="@color/whiteThree"
        android:padding="10dp"
        android:layout_above="@+id/sign_in_button"
        android:layout_marginBottom="@dimen/buttons_horizontal_margin___"
        android:layout_centerHorizontal="true"
        android:id="@+id/signInLabel"
        android:gravity="center_horizontal" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="@dimen/sign_in_button"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/buttons_horizontal_margin"
        android:layout_marginLeft="20dp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
